{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*", "src/validation-schemas/**/*.ts"],
  "compilerOptions": {
    "moduleResolution": "bundler",
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
       "@src/*": [
        "src/*"
      ],
      "@renderer/*": [
        "src/renderer/src/*"
      ]
    }
  }
}
